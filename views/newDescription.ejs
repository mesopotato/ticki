    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
    <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
    <script src="http://netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
    <style>
        a.custom-card,
        a.custom-card:hover {
            color: inherit;
            text-decoration: none;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse"
            data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false"
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand" href="#!"><%= user.name %></a>
        <img src="<%= user.imageUrl %>" style="float: right;" />
        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
            <ul class="navbar-nav mr-auto mt-2 mt-md-0">
                <li class="nav-item active">
                    <a class="nav-link" href="#!">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/../users/logout">Logout</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container">

            <% if (messages) { %>
            <%- messages() %>
            <% } %>


        <div class="jumbotron" style="margin-top: 5%;">
            <h4>Beschreibung</h4>
            <form action="../dashboard/neweventDescription" enctype="multipart/form-data" method="post" id="event_form">
                <div class="form-group">
                    <label for="beschrieb">Geben Sie eine Beschreibung des Events an</label>
                    <textarea rows="4" cols="50" class="form-control" id="beschrieb" name="beschreibung"
                        >max. 500 Zeichen </textarea>
                </div>
                <div class="form-group">
                    <label for="new_pic">Bild passend zum Event</label>
                    <input type="file" class="form-control" id="new_pic" name="pic">
                </div>
                <input type="hidden" value="<%= title %>">
                <input type="hidden" value="<%= veranstalter %>">

                <div class="form-group">
                    <button type="button" class="btn btn-secondary"
                        onclick="location.href='/users/mainpage';">Zur√ºck</button>
                    <input class="btn btn-success" type="submit" value="weiter" id="submit" name="submit">
                </div>
            </form>
        </div>
    </div>

</body>

</html>