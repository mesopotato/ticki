<!DOCTYPE html>
<html lang="de">

<head>
    <title>mainpage</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="../stylesheets/bootstrap.min.css">
    <!--<link rel="stylesheet" type="text/css" href="css/customSindarin.css"> -->

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
    <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
    <script src="http://netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
<style>
a.custom-card,
a.custom-card:hover {
  color: inherit;
  text-decoration: none;
}
</style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse"
            data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false"
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand" href="#!"><%= user.name %></a>
        <img src="<%= user.imageUrl %>" style="float: right;" />
        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
            <ul class="navbar-nav mr-auto mt-2 mt-md-0">
                <li class="nav-item active">
                    <a class="nav-link" href="#!">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/../users/logout">Logout</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container">
        <div class="jumbotron">
            <h1> Dashboard </h1>
            <% if (messages) { %>
            <%- messages() %>
            <% } %>
        </div>
        <div class="jumbotron">
            <h4>Neuen Event</h4>
            <form action="../dashboard/newevent" method="post" id="event_form">
                <div class="form-group">
                    <label for="title">Geben den Titel des Events an</label>
                    <input type="text" class="form-control" id="titleid" name="title" placeholder="zb. Outdoor Brunch">
                </div>
                <div class="form-group">
                    <label for="title">Geben den Veranstalter des Events an</label>
                    <input type="text" class="form-control" id="titleid" name="veranstalter" placeholder="Veranstalter">
                </div>
                <div class="form-group">
                    <input class="btn btn-success" type="submit" value="event erÃ¶ffnen" id="submit" name="submit">
                </div>
            </form>
        </div>
        <div class="jumbotron">
            <h2> Ihre Events</h2>
            <% events.forEach(function(event){ %>
        <a class="custom-card" href="/dashboard/getEvent/:<%= event.id %>" >
            <div class="card shadow p-6 mb-4 bg-white rounded">
                
                <div class="card-body">
                    <h4 class="card-title redtext"><%= event.title %></h4>
                    <br>
                    <h6 class="card-subtitle mb-2 text-muted"><%= event.veranstalter %></h6>
                    <p class="card-text"> <%= event.lokation %></p> <br>
                    <p class="greentext"><%= event.gueltig_datum %>'</p><br>
                    <p class="redtext"><%=  event.gueltig_time %></p>
                </div>
            </div>
        </a>
            <% }) %>


        </div>
    </div>

</body>

</html>